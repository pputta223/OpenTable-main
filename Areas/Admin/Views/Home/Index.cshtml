@{
    ViewData["Title"] = "Admin";
    var currentArea = ViewContext.RouteData.Values["area"]?.ToString() ?? "";
}

<h1>Admin</h1>

<div class="row">
    <div class="col-md-4">
        <div class="list-group">
            <a asp-area="@currentArea" asp-controller="Metropolis" asp-action="Index"
               class="list-group-item list-group-item-action">Manage Metropolis</a>
            <a asp-area="@currentArea" asp-controller="Restaurant" asp-action="Index"
               class="list-group-item list-group-item-action">Manage Restaurant</a>
            <a asp-area="@currentArea" asp-controller="User" asp-action="Index"
               class="list-group-item list-group-item-action">Manage Users</a>
        </div>
    </div>
</div>


