@model OpenTable.Models.DomainModels.Reservation
@{
    ViewData["Title"] = "Confirm Deletion";
}

<h2>Confirm Reservation Deletion</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this reservation?
</div>

<table class="table table-bordered">
    <tr><th>Restaurant</th><td>@Model.Restaurant?.Name</td></tr>
    <tr><th>Date</th><td>@Model.Date.ToString("yyyy-MM-dd")</td></tr>
    <tr><th>Time</th><td>@Model.TimeSlot</td></tr>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
